<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              tools:context=".SeeReviewFragment">

    <TextView
            android:id="@+id/TextViewTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Create a Bar"
            android:layout_marginBottom="40dp"
            android:textSize="28sp">
    </TextView>

    <TextView
            android:id="@+id/barNameText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bar Name:"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="20dp"
            android:textSize="12sp">
    </TextView>

    <EditText
            android:id="@+id/barNameEditText"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/barAddressText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Street Address:"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="20dp"
        android:textSize="12sp">
    </TextView>

    <EditText
            android:id="@+id/barAddressEditText"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    <TextView
            android:id="@+id/barPhoneText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Phone Number:"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="20dp"
            android:textSize="12sp">
    </TextView>

    <EditText
            android:id="@+id/barPhoneEditText"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    <TextView
            android:id="@+id/selectRegionText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select A Region"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="20dp"
            android:textSize="12sp">
    </TextView>

    <Spinner
            android:id="@+id/SpinnerRegionbar"
            android:layout_height="wrap_content"
            android:prompt="@string/selectbar"
            android:layout_width="fill_parent"
            android:layout_marginBottom="20dp"
            android:entries="@array/regionList">
    </Spinner>

    <TextView
            android:id="@+id/selectFeatureText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select A Feature"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="20dp"
            android:textSize="12sp">
    </TextView>

    <Spinner
            android:id="@+id/SpinnerFeaturesbar"
            android:layout_height="wrap_content"
            android:prompt="@string/selectbar"
            android:layout_width="fill_parent"
            android:layout_marginBottom="20dp"
            android:entries="@array/starList">
    </Spinner>

    <Button
            android:id="@+id/button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="Button"/>

</LinearLayout>