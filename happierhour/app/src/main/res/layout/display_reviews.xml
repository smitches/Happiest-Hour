<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".SeeReviewFragment">

    <Button
            android:id="@+id/button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="Button"
            app:layout_constraintStart_toStartOf="@+id/reviews"
            app:layout_constraintTop_toBottomOf="@+id/reviews" android:layout_marginStart="16dp"/>

    <TextView
            android:id="@+id/reviews"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:text="TextView"
            android:textSize="30sp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="152dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="248dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>